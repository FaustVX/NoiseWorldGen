{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "--configuration",
                "${input:config}",
                "${workspaceFolder}",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "--configuration",
                "${input:config}",
                "${workspaceFolder}/NoiseWorldGen.CLI/NoiseWorldGen.CLI.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run OpenGL",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--configuration",
                "${input:config}",
                "--project",
                "${workspaceFolder}/NoiseWorldGen.OpenGL/NoiseWorldGen.OpenGL.csproj"
            ],
            "problemMatcher": "$msCompile",
            "presentation": {
                "close": true,
            }
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/NoiseWorldGen.CLI/NoiseWorldGen.CLI.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
    ],
    "inputs": [
        {
            "id": "config",
            "type": "pickString",
            "options": [
                "Debug",
                "Release"
            ],
            "description": "dotnet configuration"
        }
    ]
}