<Window
    x:Class="NoiseWorldGen.Wpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:monoGameControls="clr-namespace:NoiseWorldGen.Wpf.MonoGameControls"
    xmlns:local="clr-namespace:NoiseWorldGen.Wpf"
    mc:Ignorable="d"
    Title="NoiseWorldGen.Wpf"
    WindowStartupLocation="CenterScreen"
    Width="800"
    Height="480">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>

    <DockPanel LastChildFill="True">
        <monoGameControls:MonoGameContentControl />
    </DockPanel>
</Window>
